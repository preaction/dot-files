        ;email = doug@preaction.me
[diff]
        ;algorithm = patience
        ;compactionHeuristic = true
[merge]
        ;tool = vimdiff
    renamelimit = 5000
[log]
        ;mailmap = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
