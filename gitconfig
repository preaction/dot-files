[core]
        excludesfile = ~/.gitignore

[branch]
        autosetuprebase = never
	sort = -committerdate

[alias]
        st=status
        ci=commit -v
        cp=cherry-pick
        co=checkout
        l=log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        ours   = "!f() { git checkout --ours $@ && git add $@; }; f"
        theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
        since = !git log $@ --reverse $(git describe --tags --abbrev=0)..HEAD
	main = !git checkout $(basename $(bash -c 'ls -d $(git rev-parse --show-toplevel)/.git/refs/heads/{trunk,main,master} 2>/dev/null' | head -1))

[user]
	name = Doug Bell
	email = doug@preaction.me
[diff]
	algorithm = histogram
        compactionHeuristic = true
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[merge]
        tool = vimdiff
    renamelimit = 5000
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[url "ssh://git@bitbucket.grantstreet.com:7999/"]
	insteadof = https://bitbucket.grantstreet.com/scm/
	insteadof = https://bitbucket.grantstreet.com/
[url "git@gitc.grantstreet.com:"]
	insteadof = https://gitc.grantstreet.com/
	insteadof = git://gitc.grantstreet.com/
[diff "gpg"]
	textconv = gpg -dnq --batch --no-tty
[log "gpg"]
	textconv = gpg -dnq --batch --no-tty
[show "gpg"]
	textconv = gpg -dnq --batch --no-tty
[pull]
	rebase = true
[init]
	defaultBranch = main
[push]
	# Use for Git older than 2.37
	default = current
	# autoSetupRemote added in Git 2.37
	# default = simple
	# autoSetupRemote = true
	followTags = true
[log]
	mailmap = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[column]
	ui = auto
[tag]
	sort = version:refname
[help]
	autocorrect = 0
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
